        <input type="text" class="form-control" id="inputname" name="nombre">
    </div>

    <div class="col-md-4">
        <label for="apellido" class="form-label">Apellido</label>
        <input type="text" class="form-control" id="inputlastname" name="apellido">
    </div>

    <div class="col-5">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="ejemplo@mail.com" name="email">
    </div>

    <div class="col-3">
        <label for="telefono" class="form-label">Teléfono</label>
        <input type="text" class="form-control" id="inputphone" name="telefono">
    </div>

    <div class="col-md-8">
        <div class="mb-6">
            <label for="mensaje" class="form-label">Dejanos tu mensaje!</label>
            <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
        </div>

        <div class="col-12 py-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Quiero recibir novedades sobre <strong>La Gaticueva</strong>
                </label>
            </div>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary"
                style="--bs-btn-bg: #ff8b40; --bs-btn-border-color: white; --bs-btn-hover-bg: grey; --bs-btn-hover-border-color: white; --bs-btn-font-size: 20px;">Enviar</button>
            <p>{{message}}</p>
        </div>
</form>
