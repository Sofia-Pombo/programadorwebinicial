        <div id="novedades" class="col-md-6 offset-md-1 py-3 scroll_section">
            <h2>Novedades</h2>
            <ul class="lista-novedades">
                {{#each novedades}}
                <li>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#modal{{id}}"><img src="{{imagen}}"
                            width="120">{{titulo}}</a>
                </li>
                {{/each}}
            </ul>
        </div>

        {{#each novedades}}
        <div class="modal fade" id="modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog scroll_section">
                <div class="modal-content text-center">
                    <div class="modal-header">
                        <div style="display: flex; flex-direction: column; align-items: center; width: 100%;">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            <img src="{{imagen}}" style="max-width: 80%; align-self: center;" class="mb-3">
                            <h2 class="modal-title" id="exampleModalLabel">{{titulo}}</h2>
                        </div>
                    </div>
                    <div class="modal-body">
                        <h4>{{subtitulo}}</h4>
                        <p>{{cuerpo}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


<div class="row align-items-stretch my-3 staff py-4 scroll_section" id="contactanos">
    <form class="row g-3 offset-md-2" action="/" method="post">
        <h2>Contactanos</h2>
            <div class="col-md-4">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="inputname" name="nombre">
            </div>

            <div class="col-md-4">
                <label for="apellido" class="form-label">Apellido</label>
                <input type="text" class="form-control" id="inputlastname" name="apellido">
            </div>

            <div class="col-5">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="ejemplo@mail.com" name="email">
            </div>

            <div class="col-3">
                <label for="telefono" class="form-label">Teléfono</label>
                <input type="text" class="form-control" id="inputphone" name="telefono">
            </div>

            <div class="col-md-8">
                <div class="mb-6">
                    <label for="mensaje" class="form-label">Dejanos tu mensaje!</label>
                    <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
                </div>

                <div class="col-12 py-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Quiero recibir novedades sobre <strong>La Gaticueva</strong>
                        </label>
                    </div>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary"
                        style="--bs-btn-bg: #ff8b40; --bs-btn-border-color: white; --bs-btn-hover-bg: grey; --bs-btn-hover-border-color: white; --bs-btn-font-size: 20px;">Enviar</button>
                    <p>{{message}}</p>
                </div>
        </form>
</div>

