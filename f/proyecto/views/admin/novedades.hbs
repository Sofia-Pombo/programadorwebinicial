<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{persona}}!<a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar
                    sesión<i class="fa fa-sign-out"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-2 text-right">
            <a href="#" class="btn btn-success"> <i class="fa fa-plus"></i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-secondary">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="#" title="Editar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar"
                                class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>