<form id="contactanos" class="row g-3 offset-md-2" action="/" method="post">
    <h2>Contactanos</h2>
    <div class="col-md-4">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="inputname" name="nombre">
    </div>

    <div class="col-md-4">
        <label for="apellido" class="form-label">Apellido</label>
        <input type="text" class="form-control" id="inputlastname" name="apellido">
    </div>

    <div class="col-5">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="ejemplo@mail.com" name="email">
    </div>

    <div class="col-3">
        <label for="telefono" class="form-label">Teléfono</label>
        <input type="text" class="form-control" id="inputphone" name="telefono">
    </div>

    <div class="col-md-8">
        <div class="mb-6">
            <label for="mensaje" class="form-label">Dejanos tu mensaje!</label>
            <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
        </div>

        <div class="col-12 py-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Quiero recibir novedades sobre <strong>La Gaticueva</strong>
                </label>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Enviar</button>
            <p>{{message}}</p>
        </div>
</form>